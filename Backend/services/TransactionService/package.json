{
  "name": "transaction-service",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "proto:generate": "proto-loader-gen-types --longs=String --enums=String --defaults --oneofs --grpcLib=@grpc/grpc-js --outDir=src/proto/ proto/transaction.proto proto/account.proto",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "migrate:create": "node-pg-migrate create"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.14.2",
    "@grpc/proto-loader": "^0.8.0",
    "dotenv": "^17.2.3",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-pretty": "^11.2.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/pg": "^8.11.4",
    "@types/uuid": "^10.0.0",
    "node-pg-migrate": "^7.6.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
